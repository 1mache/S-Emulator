<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0" stylesheets="@app_styling.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.components.primary.SEmulatorController">
   <top>
      <HBox alignment="CENTER_LEFT" minHeight="80.0" prefHeight="80.0" spacing="10.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <children>
            <Button fx:id="openFileButton" mnemonicParsing="false" onAction="#openFileButtonAction" styleClass="text-component" text="Open file..." />
            <Label fx:id="filenameLabel" minWidth="50.0" styleClass="text-component" text="Please load program file to continue." />
         </children>
         <padding>
            <Insets left="20.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true">
         <content>
            <StackPane minHeight="150.0" minWidth="250.0">
               <children>
                  <ImageView id="catImage" fx:id="goofyImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" scaleX="2.0" scaleY="1.5">
                     <image>
                        <Image url="@../../../../resource/images/monke.jpeg" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
